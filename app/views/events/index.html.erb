<div id="event-header" class='events-header' style='background-image: url(<%= header_background_image_url %>)'>
  <div class="container">
    <h2> Discover upcoming events </h2>
    <%= form_tag events_path, method: :get, name: :search do %>
      <%= fields_for :search do |f| %>
        <%= f.text_field :event_name, class: 'form-control', placeholder: 'Search for events, shows, courses...', required: 'required' %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="container-fluid events-list">
  <% @events.in_groups_of(3) do |g| %>
    <div class="row">
      <% g.compact.each do |e| %>
        <%= render partial: 'card', locals: {event: e} %>
      <% end %>
    </div>
  <% end %>
</div>